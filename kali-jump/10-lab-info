#!/bin/bash
echo "=========================================="
echo "  CYBERSECURITY LAB ENVIRONMENT"
echo "=========================================="
echo ""
echo "Welcome to your Kali Linux Jump Box!"
echo ""
echo "Network Information:"
# Get the actual IP from internal network interface
MY_IP=$(ip route get 1.1.1.1 | grep -oP 'src \K\S+' 2>/dev/null || hostname -I | awk '{print $1}')
INTERNAL_SUBNET=$(echo $MY_IP | cut -d. -f1-3)
echo "  Internal Network: ${INTERNAL_SUBNET}.0/24 (Gateway: ${INTERNAL_SUBNET}.1)"
echo ""
echo "Accessible Hosts:"
echo "  Kali Jump Box:   kali-jump      ($MY_IP)"
echo "  File Server:     file-server    (${INTERNAL_SUBNET}.11)"
echo ""
echo "  (Hint: There might be other hosts on the network... try scanning!)"
echo ""
echo "Getting Started:"
echo "  Change password:       passwd"
echo ""
echo "⚠️  Please change your password after first login!"
echo "=========================================="
